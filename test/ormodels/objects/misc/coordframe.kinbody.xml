<KinBody name="coordframe">
	<!-- coordinate frame for visualization -->
  <Body type="dynamic">
	  <Geom type="sphere" name ="origin">
		  <diffuseColor>0.4 0.4 0.5</diffuseColor>
		  <radius>0.01</radius>
      </Geom>
	  
	  <!-- coordinate vectors --> 
	  <Geom type="cylinder" name ="x-axis">
		<RotationAxis>0 0 1 90</RotationAxis> -->		
	  	<Translation>0.05 0 0</Translation>
        <diffuseColor>1 0 0</diffuseColor>
        <radius>0.005</radius>
        <height>0.08</height>
      </Geom>      
  
  	<Geom type="cylinder" name ="y-axis">
		<!-- <RotationAxis>1 0 0 90</RotationAxis>  -->
