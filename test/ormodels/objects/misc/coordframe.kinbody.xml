		<diffuseColor>0 1 0</diffuseColor>
		<radius>0.005</radius>
		<height>0.08</height>
	</Geom>      
	
	<Geom type="cylinder" name ="z-axis">
		<RotationAxis>1 0 0 90</RotationAxis> 
		<Translation>0 0 0.05</Translation>
