<Environment>
  <bkgndcol>0.3 0.7 0.8</bkgndcol>
  <camtrans>1.642916 2.438623 2.688797</camtrans>
  <camrotaxis>0.1438 0.4792 0.8658 149</camrotaxis>

  <Robot file="robots/barrettwam.robot.xml" name="BarrettWAM">
    <!-- add the base -->
    <KinBody>
	<Translation>-0.22 -0.14 -0.346</Translation>
      <Body type="dynamic">
        <Geom type="cylinder">
          <RotationAxis>1 0 0 -90</RotationAxis>
          <radius>0.08</radius>
          <height>0.66</height>
          <diffusecolor>0.3 0.3 0.3</diffusecolor>
          <Translation> 0.2286 0.1397 -0.316</Translation>
        </Geom>
      </Body>
    </KinBody>
    <translation>0.22 0.14 1.0335</translation>
  </Robot>

  <KinBody name="floor">
    <Body type="static">
      <Translation>0 0 -0.05</Translation>
      <Geom type="box">
        <extents>2 2 0.005</extents>
        <diffuseColor>.6 .6 .6</diffuseColor>
        <ambientColor>0.6 0.6 0.6</ambientColor>
      </Geom>
    </Body>
  </KinBody>

  <!-- wall with windows is 0.89m away from robot origin -->
    <KinBody name="windows">
    <Body type="static" >
      <Translation>-0.8 0.46 0.7</Translation>
      <Geom type="box">

        <extents>.01 1.52 0.7</extents>
        <diffuseColor>.75 .75 .6</diffuseColor>
        <ambientColor>.75 .75 .6</ambientColor>
      </Geom>
    </Body>
    </KinBody>

<!-- wall with whiteboard is 1.1m away from robot origin -->
    <KinBody name="whiteboard">
    <Body type="static" >
      <Translation>0.6 -1.05 1.3</Translation>
      <Geom type="box">

        <extents>1.42 .01 1.375</extents>
        <diffuseColor>.75 .75 .6</diffuseColor>
        <ambientColor>.75 .75 .6</ambientColor>
      </Geom>

    </Body>
    <Body type="static" >
      <Translation>0.6 -1.04 1.4</Translation>
      <Geom type="box">

        <extents>1.42 .01 0.5</extents>
        <diffuseColor>0.8 0.8 0.8</diffuseColor>
        <ambientColor>0.8 0.8 0.8</ambientColor>
      </Geom>

    </Body>
    </KinBody>

<!-- bookshelf -->

    <KinBody file= "../../data/ikeashelf.kinbody.xml">
        <Translation>0.145 -0.86 0</Translation>
        <RotationAxis>0 0 1 90</RotationAxis>
    </KinBody>

<!-- CABINETS -->

    <KinBody file="../../data/intel/cabinet_lower.kinbody.xml">
      <Translation >0.92 -0.555 0</Translation>
      <RotationAxis>0 0 1 0</RotationAxis>
    </KinBody>

    <KinBody file="../../data/intel/cabinet_upper.kinbody.xml">
      <Translation >0.92 -0.653 0.755</Translation>
      <RotationAxis>0 0 1 0</RotationAxis>
    </KinBody>



<!-- TABLES -->
    <KinBody file="../../data/intel/table.kinbody.xml" Name="Destination">
      <!-- table surface measures 0.715m above the floor, but the table model
           defines the surface 2cm above the model origin -->
      <Translation>0.9 0.44 0.695</Translation>
      <RotationAxis>0 0 1 270</RotationAxis>
    </KinBody>

</Environment>
